<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 -mt-32 relative z-20 pb-20">
  <div class="grid md:grid-cols-2 gap-8 items-start">
    {%- assign collection = collections[section.settings.collection] -%}
    {% for product in collection.products limit: 2 %}
      <div class="bg-white rounded-2xl shadow-lg border {% if forloop.index == 2 %}border-brand-blue ring-2 ring-brand-blue ring-opacity-50{% else %}border-gray-100{% endif %} p-8 flex flex-col hover:border-brand-blue/30 transition-all group h-full relative">
        
        {% if forloop.index == 2 %}
          <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
            <span class="bg-brand-blue text-white px-4 py-2 rounded-full text-sm font-bold">
              Most Popular
            </span>
          </div>
        {% endif %}

        <div class="flex items-center gap-2 mb-4">
          <div class="p-2 bg-brand-light rounded-lg text-brand-blue group-hover:bg-brand-blue group-hover:text-white transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-search"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/></svg>
          </div>
          <span class="text-sm font-bold text-gray-500">
            Option {% if forloop.index == 1 %}A{% else %}B{% endif %}
          </span>
        </div>
        
        <div class="text-2xl font-bold text-brand-black mb-2">{{ product.title }}</div>
        
        {% if forloop.index == 1 %}
          <div class="text-lg text-gray-600 mb-4 font-medium">Understand Your Body</div>
        {% else %}
          <div class="text-lg text-gray-600 mb-2 font-medium">Complete Action Plan + 1-on-1 Strategy Call</div>
          <div class="text-sm text-gray-500 mb-4">(92% of customers choose this path)</div>
        {% endif %}
        
        <p class="text-gray-600 mb-6 leading-relaxed">
          {{ product.description }}
        </p>
        
        <!-- Pricing -->
        <div class="mb-6">
          {% if product.compare_at_price > product.price and forloop.index == 2 %}
            <div class="text-lg text-gray-400 line-through mb-1">
              {{ product.compare_at_price | money }}
            </div>
            <div class="text-4xl font-bold text-brand-black mb-2">
              {{ product.price | money }}
            </div>
            <div class="text-sm bg-red-100 text-red-800 px-3 py-1 rounded-full inline-block">
              Year End Special Offer
            </div>
          {% else %}
            <div class="text-4xl font-bold text-brand-black">
              {{ product.price | money }}
            </div>
          {% endif %}
        </div>

        <!-- Features List -->
        <div class="mb-8 space-y-3 flex-grow">
          {% if forloop.index == 1 %}
            <div class="flex items-start gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-600 mt-0.5 flex-shrink-0"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
              <span class="text-gray-700">At-home microbiome collection kit</span>
            </div>
            <div class="flex items-start gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-600 mt-0.5 flex-shrink-0"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
              <span class="text-gray-700">Advanced 16S rRNA lab analysis from a clinically-trusted laboratory</span>
            </div>
            <div class="flex items-start gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-600 mt-0.5 flex-shrink-0"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
              <span class="text-gray-700">Personalized GMT Microbiome Report</span>
            </div>
            <div class="flex items-start gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-600 mt-0.5 flex-shrink-0"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
              <span class="text-gray-700">Upgrade to Option B (Complete Action Plan) anytime</span>
            </div>
          {% else %}
            <div class="text-sm font-bold text-gray-700 mb-2">Everything in Gut Discovery Kit</div>
            <div class="text-sm text-gray-600 mb-4">Kit + Lab Analysis + Report</div>
            <div class="text-sm font-bold text-gray-700 mb-2">PLUS</div>
            <div class="flex items-start gap-3">
              <svg xmlns="http://www.w3.org/2000/.svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-600 mt-0.5 flex-shrink-0"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
              <span class="text-gray-700">20-min Personalized Consultation (Video/Phone)</span>
            </div>
            <div class="flex items-start gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-600 mt-0.5 flex-shrink-0"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.1.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
              <span class="text-gray-700">Complimentary 20-min BRT Check</span>
            </div>
            <div class="text-sm text-gray-600 mt-2 italic">
              We use German bio-resonance technology to verify your results and confirm your personalized probiotic protocol to ensure the best solution for your body.
            </div>
          {% endif %}
        </div>
        
        <form action="{{ routes.cart_add_url }}" method="post" enctype="multipart/form-data">
          <input type="hidden" name="id" value="{{ product.variants.first.id }}">
          <button 
            type="submit"
            class="w-full py-4 px-6 rounded-xl font-bold transition-colors flex items-center justify-center gap-2 {% if forloop.index == 2 %}bg-brand-blue text-white hover:bg-brand-blue/90{% else %}border-2 border-brand-blue text-brand-blue hover:bg-brand-light{% endif %}"
          >
            {% if forloop.index == 1 %}
              Get My Gut Report â€“ {{ product.price | money }}
            {% else %}
              Yes! I want the Complete Action Plan
              {% if product.compare_at_price > product.price %}
                <span class="text-sm">(Save {{ product.compare_at_price | minus: product.price | money }})</span>
              {% endif %}
            {% endif %}
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-right"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
          </button>
        </form>
        
        {% if forloop.index == 2 %}
          <div class="text-xs text-gray-500 mt-2 text-center">
            Includes priority shipping & processing
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}
